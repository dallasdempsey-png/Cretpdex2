import React from 'react';
import { View, Text, Image, StyleSheet, ScrollView } from 'react-native';

export default function DetailScreen({ route }) {
  const { cryptid } = route.params;

  return (
    <ScrollView contentContainerStyle={styles.container}>
      <Text style={styles.name}>{cryptid.name}</Text>
      <Text style={styles.type}>{cryptid.type}</Text>
      <Image source={{ uri: cryptid.imageUrl }} style={styles.image} />
      <Text style={styles.label}>Region:</Text>
      <Text style={styles.text}>{cryptid.region}</Text>
      <Text style={styles.label}>Traits:</Text>
      <Text style={styles.text}>{cryptid.traits.join(', ')}</Text>
      <Text style={styles.label}>Behavior:</Text>
      <Text style={styles.text}>{cryptid.behavior.join(', ')}</Text>
      <Text style={styles.label}>Summary:</Text>
      <Text style={styles.text}>{cryptid.summary}</Text>
      <Text style={styles.label}>Lore:</Text>
      <Text style={styles.text}>{cryptid.lore}</Text>
      <Text style={styles.label}>Coordinates:</Text>
      <Text style={styles.text}>
        {cryptid.latitude}, {cryptid.longitude}
      </Text>
    </ScrollView>
  );
}

const styles = StyleSheet.create({
  container: { padding: 20 },
  name: { fontSize: 24, fontWeight: 'bold', marginBottom: 8 },
  type: { fontSize: 18, fontStyle: 'italic', marginBottom: 12 },
  image: { height: 200, borderRadius: 8, marginBottom: 16 },
  label: { fontWeight: 'bold', marginTop: 10 },
  text: { fontSize: 14, marginBottom: 6 }
});